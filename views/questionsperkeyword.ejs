<script>
    let keywords = '<%= keywords %>'.split(',');
    let counts = '<%= counts %>'.split(',').map(x=>+x);
    let myChart = document.getElementById("myChart").getContext('2d');
    

    let barChart = new Chart(myChart , {
        type: 'bar',
        data: {
            labels:keywords , 
            datasets:[{
                label:'#3 Most Popular Keywords',
                data: counts,  backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(177, 249, 252, 0.384)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1,
            hoverBorderWidth: 3,
            hoverBorderColor : '#000'
        }]
    },
    options: {
